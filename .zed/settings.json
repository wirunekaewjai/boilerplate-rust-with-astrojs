// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "file_scan_exclusions": [
    // default
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",

    // custom
    "**/.next"
  ],
  "format_on_save": "off",
  "languages": {
    "Astro": {
      "format_on_save": "on",
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "JavaScript": {
      "formatter": "language_server",
      "format_on_save": "on",
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    },
    "Rust": {
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": "language_server",
      "format_on_save": "on",
      "tab_size": 2
    },
    "TSX": {
      "formatter": "language_server",
      "format_on_save": "on",
      "tab_size": 2
    }
  }
}
